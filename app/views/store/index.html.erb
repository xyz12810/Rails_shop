<p id="notice"><%= notice %></p>

<h1>Your Progmatic Catalog</h1>
<h3><%= page_title  %></h3>
<%= distance_of_time_in_words(Time.now, Time.local(2016, 12, 25)) %>

<%= @session_greeting_msg %>
<% cache @products do %>
	<% @products.each do |product| %>
		<% cache product do %>	
			<div class="entry">
				<%=link_to(image_tag(product.image_url),
					line_items_path(product_id: product),
					html_options = {:method => :post,:remote =>true})
				 %>

				<h3> <%= product.title %></h3>
				<p><%= sanitize(product.description) %></p>
				<div class="price_line">
					<span class="price"> 
					<!-- 	<%= sprintf("$%0.02f",product.price)%>  -->
							<%= number_to_currency(product.price)%>

							<%= button_to 'Add to Cart ',line_items_path(product_id: product) ,remote: true%>
					</span>
				</div>
			</div>
		<% end %>
	<% end %>
<% end %>

